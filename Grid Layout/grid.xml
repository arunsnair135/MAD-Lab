<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:columnCount="4" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4" >
        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="4"
            android:hint="vbdvbd" />

    </GridLayout>

    <Space
        android:layout_height="50dp"
        android:layout_width="match_parent"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"

        >
        <Button
            android:text="1"
            android:id="@+id/bu1" />
        <Button
            android:text="2"
            android:id="@+id/bu2" />
        <Button
            android:text="3"
            android:id="@+id/bu3" />
        <Button
            android:text="+"
            android:id="@+id/bu_add" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"

        >
        <Button
            android:text="4"
            android:id="@+id/bu4" />
        <Button
            android:text="5"
            android:id="@+id/bu5" />
        <Button
            android:text="6"
            android:id="@+id/bu6" />
        <Button
            android:text="-"
            android:id="@+id/bu_sub" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"

        >
        <Button
            android:text="7"
            android:id="@+id/bu7" />
        <Button
            android:text="8"
            android:id="@+id/bu8" />
        <Button
            android:text="9"
            android:id="@+id/bu9" />
        <Button
            android:text="*"
            android:id="@+id/bu_mul"/>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"

        >
        <Button
            android:text="0"
            android:id="@+id/bu0" />
        <Button
            android:text="/"
            android:id="@+id/bu_div" />
        <Button
            android:text="="
            android:id="@+id/bu_eq" />
        <Button
            android:text="clr"
            android:id="@+id/bu_clr" />
    </GridLayout>

</GridLayout>
